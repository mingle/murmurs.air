<?xml version="1.0" encoding="utf-8" ?>
<application 
  xmlns="http://ns.adobe.com/air/application/1.5">
<!-- AIR Application Descriptor File. See
  http://www.adobe.com/go/air_1.1_application_descriptor. -->
  <id>com.thoughtworks.mingle.murmurs.air</id>
  <name>Murmurs</name>
  <version>0.2.7.1</version>
  <filename>Murmurs</filename>
  <description>A Twitter like client for Mingle murmurs</description>
  <copyright>Copyright Thoughtworks Inc.</copyright>
  <initialWindow>
    <content>index.html</content>
    <title>Mingle Murmur</title>
    <transparent>false</transparent>
    <minimizable>true</minimizable>
    <maximizable>true</maximizable>
    <resizable>true</resizable>
    <visible>false</visible>
    <width>500</width>
    <height>500</height>
    <!-- The window's minimum size, specified as a width/height pair, such as "400 200". Optional. -->
    <minSize>280 200</minSize>
    <x>150</x>
    <y>150</y>
  </initialWindow>
  <programMenuFolder>Murmurs</programMenuFolder>
  <icon>  
    <image128x128>images/icon128.png</image128x128>
    <image48x48>images/icon48.png</image48x48>
    <image32x32>images/icon32.png</image32x32>
    <image16x16>images/icon16.png</image16x16>
  </icon>
  <customUpdateUI>false</customUpdateUI>
  <allowBrowserInvocation>false</allowBrowserInvocation>
</application>
